<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/padding_layout"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <!--    <ImageView-->
    <!--        android:id="@+id/ivOnBoarding"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:scaleType="centerCrop"-->
    <!--        android:src="@drawable/ic_analyze" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_layout_4">

        <ImageView
            android:id="@+id/ivOnBoarding"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_intro_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_layout"
                android:textColor="@color/main_yellow"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Dengar" />

            <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_layout"
                android:lines="2"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:text="Dengar Dengar Dengar Dengar \n asdasd" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>