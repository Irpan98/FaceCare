<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".identify.IdentifyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:text="Gender" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:layout_marginTop="@dimen/padding_layout_3"
        android:checkedButton="@+id/radio_button_1">

        <RadioButton
            android:id="@+id/rgGenderGirls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Female" />

        <RadioButton
            android:id="@+id/rgGenderBoys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Male" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:layout_marginTop="@dimen/padding_layout_3"
        android:text="Face Problem" />

    <RadioGroup
        android:id="@+id/rg_face_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:layout_marginTop="@dimen/padding_layout_3"
        android:text="What is Your Goals" />


    <RadioGroup
        android:id="@+id/rgSkinType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:checkedButton="@+id/radio_button_1"></RadioGroup>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>