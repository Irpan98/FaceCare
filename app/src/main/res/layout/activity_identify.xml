<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".identify.IdentifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_identify"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How We Identify You"
            android:textSize="25sp"
            android:textColor="@color/main_yellow"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:text="Gender" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:checkedButton="@+id/radio_button_1">

        <RadioButton
            android:id="@+id/rgGenderGirls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Female" />

        <RadioButton
            android:id="@+id/rgGenderBoys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Male" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:layout_marginTop="@dimen/padding_layout_3"
        android:padding="8dp"
        android:text="Face Problem" />

    <RadioGroup
        android:id="@+id/rg_face_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:layout_marginTop="@dimen/padding_layout_3"
        android:padding="8dp"
        android:text="What type of your skin" />


    <RadioGroup
        android:id="@+id/rgSkinType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:checkedButton="@+id/radio_button_1" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:layout_marginTop="@dimen/padding_layout_3"
        android:padding="16dp"
        android:text="What is Your Goals" />


    <RadioGroup
        android:id="@+id/rgGoals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_layout"
        android:checkedButton="@+id/radio_button_1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rgGoals_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lessen Acne" />

        <RadioButton
            android:id="@+id/rgGoals_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reduce Spots" />

        <RadioButton
            android:id="@+id/rgGoals_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glow Up" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_submit"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Submit" />
</LinearLayout>